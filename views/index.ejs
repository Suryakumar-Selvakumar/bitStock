<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">    <link rel="stylesheet" href="/static/styles.css" />
    <link rel="stylesheet" href="static/bootstrap.css">
    <link rel="stylesheet" href="static/styles.css">
    <title>bitStock</title>
  </head>
  <body>
    <%- include("components/header") %>
    <main class="index-page">
      <div class="dashboard-container">
        <h1>Dashboard</h1>
        <div class="dashboard">
          <div class="dashboard-stat">
            <img class="dashboard-icon" src="static/pc-1.png" alt="a pc icon">
            <div class="dashboard-details">
              <span><%= dashboard.buildsCount %></span>
              <span>Builds Completed</span>
            </div>
          </div>
          <div class="dashboard-stat">
            <img class="dashboard-icon" src="static/dollar.png" alt="a dollar icon">
            <div class="dashboard-details">
              <span>$<%= Math.round(dashboard.revenue) %></span>
              <span>Total Revenue</span>
            </div>
          </div>
          <div class="dashboard-stat">
            <img class="dashboard-icon" src="static/supply.png" alt="a supply icon">
            <div class="dashboard-details">
              <span><%= dashboard.productsCount %></span>
              <span>Unique Products</span>
            </div>
          </div>
          <div class="dashboard-stat">
            <img class="dashboard-icon" src="static/p-3.png" alt="a supply icon">
            <div class="dashboard-details">
              <span><%= dashboard.productsQuantity %></span>
              <span>No. of Products</span>
            </div>
          </div>
        </div>
      </div>
        <div class="builds-container">
          <span>Builds</span>
          <div class="builds">
            <img src="static/build.png" alt="An image of a PC build">
            <div class="build-links">
            <a href="/builds">Completed Builds</a>
            <a href="/builds/builder"">Create New build</a>
            </div>
          </div>
        </div>
        <div class="categories-container">
          <span>Products</span>
          <div class="categories">
            <a href="/products?category=cpu" class="category">
              <img src="static/cpu-1.png" alt="An image of a cpu" class="category-image">
              <p>CPUs</p>
            </a>
            <a href="/products?category=cpu-cooler" class="category">
              <img src="static/cpu-cooler-3.png" alt="An image of a cpu cooler" class="category-image">
              <p>CPU Coolers</p>
            </a>
            <a href="/products?category=motherboard" class="category">
              <img src="static/mb-3.png" alt="An image of a motherboard" class="category-image">
              <p>Motherboards</p>
            </a>
            <a href="/products?category=memory" class="category">
              <img src="static/memory-1.png" alt="An image of a ram" class="category-image">
              <p>Memory</p>
            </a>
            <a href="/products?category=storage" class="category">
              <img src="static/storage-2.png" alt="An image of a ssd" class="category-image">
              <p>Storage</p>
            </a>
            <a href="/products?category=video-card" class="category">
              <img src="static/video-card-3.png" alt="An image of a GPU" class="category-image">
              <p>Video Card</p>
            </a>
            <a href="/products?category=power-supply" class="category">
              <img src="static/psu-2.png" alt="An image of a power supply" class="category-image">
              <p>Power Supplies</p>
            </a>
            <a href="/products?category=case" class="category">
              <img src="static/case-1.png" alt="An image of cases" class="category-image">
              <p>Cases</p>
            </a>
            <a href="/products?category=monitor" class="category">
              <img src="static/monitor-1.png" alt="An image of a monitor" class="category-image">
              <p>Monitors</p>
            </a>
            <a href="/products?category=headphones" class="category">
              <img src="static/headphones-1.png" alt="An image of a headphone" class="category-image">
              <p>Headphones</p>
            </a>
            <a href="/products?category=keyboard" class="category">
              <img src="static/kb-2.png" alt="An image of a keyboard" class="category-image">
              <p>Keyboards</p>
            </a>
            <a href="/products?category=mouse" class="category">
              <img src="static/mouse-1.png" alt="An image of a mouse" class="category-image">
              <p>Mice</p>
            </a>
          </div>
        </div>
    </main>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
  </body>
</html>
