<a
  href="/builds/<%= build.id %>"
  class="product-link"
  aria-label="View details for <%= build.build_name %>"
>
  <article aria-labelledby="build-name-<%= build.id %>" class="product build">
    <div class="build-image">
      <img src="<%= build.image %>" aria-hidden="true" alt="" />
    </div>
    <div class="product-details build">
      <p class="build-name"><%= build.build_name %></p>
      <div class="feature-row">
        <p id="build-cpu" class="product-feature build"><%= build.cpu %></p>
        <p class="product-feature right build"><%= build.gpu %></p>
      </div>
      <div class="feature-row build">
        <div class="product-feature build">
          <svg viewBox="0 0 16 16" fill="none">
            <g id="SVGRepo_bgCarrier" stroke-width="0"></g>
            <g
              id="SVGRepo_tracerCarrier"
              stroke-linecap="round"
              stroke-linejoin="round"
            ></g>
            <g id="SVGRepo_iconCarrier">
              <path
                d="M8 7C9.65685 7 11 5.65685 11 4C11 2.34315 9.65685 1 8 1C6.34315 1 5 2.34315 5 4C5 5.65685 6.34315 7 8 7Z"
                fill="#000000"
              ></path>
              <path
                d="M14 12C14 10.3431 12.6569 9 11 9H5C3.34315 9 2 10.3431 2 12V15H14V12Z"
                fill="#000000"
              ></path>
            </g>
          </svg>
          <p id="build-for-page"><%= build.build_for %></p>
        </div>
        <p class="product-feature right build">$<%= build.price %></p>
      </div>
    </div>
  </article>
</a>
