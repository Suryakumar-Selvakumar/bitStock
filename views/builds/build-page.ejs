<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="../static/bootstrap.css" />
    <link rel="stylesheet" href="../static/styles.css" />
    <title>bitStock</title>
  </head>
  <body>
    <%- include("../components/header") %>
    <main class="products-page build">
      <div class="first-row-products">
        <h1><%= build.build_name %></h1>
        <a href="/builds">
          <button class="product-submit add"><< Return to builds</button>
        </a>
      </div>
      <div class="items-container build">
        <div class="sidebar build">
          <img src="<%= build.image %>" alt="<%= build.build_name %>" />
          <div class="build-page-details">
            <div class="product-detail">
              <span>Build for</span>
              <span><%= build.build_for %></span>
            </div>
            <div class="product-detail">
              <span>Price</span>
              <span>$<%= build.price %></span>
            </div>
          </div>
          <div class="build-btns">
            <form method="get" action="/builds/edit/<%= build.id %>">
              <button class="product-submit add build">Edit</button>
            </form>
            <a href="/builds/delete/<%= build.id %>">
              <button class="product-submit delete build">Delete</button>
            </a>
          </div>
        </div>
        <div class="products build">
          <% build.parts.forEach(product => { %> <%-
          include("../products/product", {product: product, brandImage:
          brandImage, pageState: "build", buildName: build.build_name}) %> <% })
          %>
        </div>
      </div>
    </main>
    <script
      src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
      integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
      integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
      integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
