<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="styles.css" />
    <title>bitStock</title>
  </head>
  <body>
    <%- include("../components/header") %>
    <main class="products-page">
      <div class="first-row in-products">
        <h1>Products</h1>
        <a href="/products/new">
          <button class="product-submit add">Add a Product</button>
        </a>
      </div>
      <div class="products-container">
        <div class="sidebar">
          <form action="/products" method="get"></form>
        </div>
        <div class="products">
          <% products.forEach(product => { %> <%- include("product", {product:
          product, brandImage: brandImage}) %> <% }) %>
        </div>
      </div>
    </main>
  </body>
</html>
