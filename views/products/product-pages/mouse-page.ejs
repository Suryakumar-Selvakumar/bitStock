<div class="product-detail">
  <span>Color</span>
  <div class="product-colors">
    <% product.details.color.split("/").forEach((productColor) => { %>
    <div
      class="product-color"
      style="
        background-color: <%= productColor.toLowerCase() %>;
        border-radius: 50%;
        height: 20px;
        width: 20px;
        border: 1px solid rgba(0, 0, 0, 0.144);
      "
    ></div>
    <% }) %>
  </div>
</div>
<div class="product-detail">
  <span>Connection Type</span>
  <span><%= product.details.connectionType %></span>
</div>
<div class="product-detail">
  <span>Maximum DPI</span>
  <span><%= product.details.maximumDPI %></span>
</div>
<div class="product-detail">
  <span>Hand Orientation</span>
  <span> <%= product.details.handOrientation %> </span>
</div>
