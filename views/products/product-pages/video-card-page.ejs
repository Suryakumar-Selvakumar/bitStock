<div class="product-detail">
  <span>Color</span>
  <div class="product-colors">
    <% product.details.color.split("/").forEach((productColor) => { %>
    <div
      class="product-color"
      style="
        background-color: <%= productColor.toLowerCase() %>;
        border-radius: 50%;
        height: 20px;
        width: 20px;
        border: 1px solid rgba(0, 0, 0, 0.144);
      "
    ></div>
    <% }) %>
  </div>
</div>
<div class="product-detail">
  <span>Chipset</span>
  <span><%= product.details.chipset %></span>
</div>
<div class="product-detail">
  <span>Core Clock</span>
  <span><%= product.details.coreClock %></span>
</div>
<div class="product-detail">
  <span>Boost Clock</span>
  <span> <%= product.details.boostClock %> </span>
</div>
<div class="product-detail">
  <span>Length</span>
  <span> <%= product.details.length %> </span>
</div>
