<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="../../static/bootstrap.css" />
    <link rel="stylesheet" href="../../static/styles.css" />
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="../../static/apple-touch-icon.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="../../static/favicon-32x32.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="16x16"
      href="../../static/favicon-16x16.png"
    />
    <link rel="manifest" href="../../static/site.webmanifest" />
    <title>bitStock</title>
  </head>
  <body>
    <%- include("../components/header") %>
    <main aria-label="Edit <%= product.name %>" class="product-page">
      <div class="first-row-product">
        <a href="/products/<%= product.id %>" class="product-submit add">
          &laquo; Return to <%= product.name %>
        </a>
      </div>
      <form
        method="post"
        action="/products/edit/<%= product.id %>"
        enctype="multipart/form-data"
        class="product-container"
      >
        <header class="category-brand edit">
          <p><%= product.category %></p>
          <label for="brand" class="sr-only">Brand</label>
          <input
            type="text"
            id="brand"
            name="brand"
            value="<%= product.brand %>"
            required
          />
        </header>
        <div class="product-page-image edit">
          <img src="<%= product.image %>" alt="<%= product.name %>" />
          <label for="image" class="sr-only">Image</label>
          <input
            type="file"
            id="image"
            name="image"
            accept="image/png, image/jpeg, image/svg+xml"
            aria-describedby="image-hint"
          />
          <p class="sr-only" id="image-hint">Allowed types: PNG, JPEG, SVG</p>
        </div>
        <div class="product-page-details">
          <label for="name" class="sr-only">Name</label>
          <input
            autocomplete="name"
            type="text"
            required
            id="name"
            name="name"
            value="<%= product.name %>"
          />
          <div class="specific-details edit">
            <div class="product-detail">
              <label for="price">Price</label>
              <span class="product-input">
                $<input
                  type="number"
                  min="0"
                  step=".01"
                  id="price"
                  name="price"
                  value="<%= product.price %>"
                  required
                />
              </span>
            </div>
            <div class="product-detail">
              <label for="quantity">Quantity</label>
              <span class="product-input">
                x<input
                  type="number"
                  min="0"
                  id="quantity"
                  name="quantity"
                  value="<%= product.quantity %>"
                  required
                />
              </span>
            </div>
            <% if(category === "cpu") { %> <%-
            include("product-edit-pages/cpu-edit-page") %> <% } else if(category
            === "cpu-cooler") { %> <%-
            include("product-edit-pages/cpu-cooler-edit-page") %> <% } else
            if(category === "motherboard") { %> <%-
            include("product-edit-pages/motherboard-edit-page") %> <% } else
            if(category === "memory") { %> <%-
            include("product-edit-pages/memory-edit-page") %> <% } else
            if(category === "storage") { %> <%-
            include("product-edit-pages/storage-edit-page") %> <% } else
            if(category === "video-card") { %> <%-
            include("product-edit-pages/video-card-edit-page") %> <% } else
            if(category === "power-supply") { %> <%-
            include("product-edit-pages/power-supply-edit-page") %> <% } else
            if(category === "case") { %> <%-
            include("product-edit-pages/case-edit-page") %> <% } else
            if(category === "monitor") { %> <%-
            include("product-edit-pages/monitor-edit-page") %> <% } else
            if(category === "headphones") { %> <%-
            include("product-edit-pages/headphones-edit-page") %> <% } else
            if(category === "keyboard") { %> <%-
            include("product-edit-pages/keyboard-edit-page") %> <% } else
            if(category === "mouse") { %> <%-
            include("product-edit-pages/mouse-edit-page") %> <% } %>
          </div>
        </div>
        <div class="product-page-btns edit">
          <button
            aria-label="Submit changes for <%= product.name %>"
            type="submit"
            class="product-submit add"
          >
            Submit
          </button>
        </div>
      </form>
    </main>
    <script
      src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
      integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
      integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
      integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
