<div class="product-detail">
  <label for="core-count">Core Count</label>
  <input
    type="number"
    min="0"
    id="core-count"
    value="<%= parseInt(product.details.coreCount) %>"
    name="coreCount"
    required
  />
</div>
<div class="product-detail">
  <label for="core-clock">Performance Core Clock</label>
  <input
    type="number"
    min="0"
    step=".01"
    id="core-clock"
    name="coreClock"
    value="<%= parseFloat(product.details.coreClock) %>"
    required
  />
</div>
<div class="product-detail">
  <label for="boost-clock">Performance Core Boost Clock</label
  ><input
    type="number"
    min="0"
    step=".01"
    id="boost-clock"
    name="boostClock"
    value="<%= parseFloat(product.details.boostClock) %>"
    required
  />
</div>
<div class="product-detail">
  <label for="microarchitecture">Microarchitecture</label>
  <input
    type="text"
    id="microarchitecture"
    name="microArchitecture"
    value="<%= product.details.microArchitecture %>"
    required
  />
</div>
<div class="product-detail">
  <label for="tdp">TDP</label>
  <input
    type="number"
    min="0"
    id="tdp"
    name="tdp"
    value="<%= parseInt(product.details.tdp) %>"
    required
  />
</div>
<div class="product-detail">
  <label for="integrated-graphics">Integrated Graphics</label>
  <input
    type="text"
    id="integrated-graphics"
    name="integratedGPU"
    value="<%= product.details.integratedGPU %>"
    required
  />
</div>
