<div class="product-detail">
  <label for="color">Color</label>
  <input
    type="text"
    id="color"
    name="color"
    value="<%= product.details.color %>"
    required
  />
</div>
<div class="product-detail">
  <label for="fan-rpm-min">Fan RPM (min, max)</label>
  <span class="product-specific-input">
    <input
      type="number"
      min="0"
      id="fan-rpm-min"
      name="fanRPMMin"
      value="<%= parseInt(product.details.fanRPMMin) %>"
      required
    />
    <input
      type="number"
      min="0"
      id="fan-rpm-max"
      name="fanRPMMax"
      value="<%= parseInt(product.details.fanRPMMax) %>"
      required
    />
  </span>
</div>
<fieldset class="product-detail">
  <legend>Radiator Size</legend>
  <div class="product-specific-input-radio">
    <div>
      <input type="radio" id="240" name="radiatorSize" <%=
      product.details.radiatorSize === "240" ? 'checked' : '' %> value="240"
      required />
      <label for="240">240</label>
    </div>
    <div>
      <input type="radio" id="360" name="radiatorSize" <%=
      product.details.radiatorSize === "360" ? 'checked' : '' %> value="360" />
      <label for="360">360</label>
    </div>
    <div>
      <input type="radio" id="420" name="radiatorSize" <%=
      product.details.radiatorSize === "420" ? 'checked' : '' %> value="420" />
      <label for="420">420</label>
    </div>
    <div>
      <input type="radio" id="none" name="radiatorSize" <%=
      product.details.radiatorSize === "None" ? 'checked' : '' %> value="None"
      />
      <label for="none">None</label>
    </div>
  </div>
</fieldset>
<div class="product-detail">
  <label for="noise-level-min">Noise Level dB (min, max)</label>
  <span class="product-specific-input">
    <input
      type="number"
      step=".1"
      min="0"
      id="noise-level-min"
      name="noiseLevelMin"
      value="<%= parseFloat(product.details.noiseLevelMin) %>"
      required
    />
    <input
      type="number"
      step=".1"
      min="0"
      id="noise-level-max"
      name="noiseLevelMax"
      value="<%= parseFloat(product.details.noiseLevelMax) %>"
      required
    />
  </span>
</div>
