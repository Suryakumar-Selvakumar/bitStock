<div class="product-detail">
  <span>Capacity</span>
  <input
    type="number"
    min="0"
    id="capacity"
    value="<%= parseInt(product.details.capacity) %>"
    name="capacity"
    required
  />
</div>
<div class="product-detail">
  <span>Type</span>
  <input type="text" name="type" value="<%= product.details.type %>" required />
</div>
<div class="product-detail">
  <span>Cache</span>
  <input
    type="number"
    min="0"
    id="cache"
    value="<%= parseInt(product.details.cache) %>"
    name="cache"
  />
</div>
<div class="product-detail">
  <span>Form Factor</span>
  <div class="product-specific-input-radio">
    <div>
      <input type="radio" id="M.2-2280" name="formFactor" <%= product.details.formFactor === 'M.2-2280' ? 'checked' : '' %> value="M.2-2280" required />
      <label for="M.2-2280">M.2-2280</label>
    </div>
    <div>
      <input type="radio" id='3.5"' name="formFactor" <%= product.details.formFactor === '3.5"' ? 'checked' : '' %> value='3.5"' />
      <label for="3.5"">3.5"</label>
    </div>
    <div>
      <input type="radio" id='2.5"' name="formFactor" <%= product.details.formFactor === '2.5"' ? 'checked' : '' %> value='2.5"' />
      <label for='2.5"'>2.5"</label>
    </div>
    <div>
      <input type="radio" id="PCIe" name="formFactor" <%= product.details.formFactor === 'PCIe' ? 'checked' : '' %> value="PCIe" />
      <label for="PCIe" >PCIe</label>
    </div>
  </div>
</div>
<div class="product-detail">
  <span>Interface</span>
  <input
    type="text"
    name="interface"
    value="<%= product.details.interface %>"
    required
  />
</div>
