<fieldset class="product-fieldset">
  <legend>Style:</legend>
  <div>
    <input type="radio" id="gaming" name="style" value="gaming" />
    <label for="gaming">Gaming</label>
  </div>
  <div>
    <input type="radio" id="mini" name="style" value="mini" />
    <label for="mini">Mini</label>
  </div>
  <div>
    <input type="radio" id="standard" name="style" value="standard" />
    <label for="standard">Standard</label>
  </div>
</fieldset>
<div class="label-input-container">
  <label for="switch-type">Switch Type:</label>
  <input type="text" id="switch-type" name="switchType" required />
</div>
<div class="label-input-container">
  <label for="backlit">Backlit:</label>
  <input type="text" id="backlit" name=backlit" required />
</div>
<div class="label-input-container">
  <label for="tenkeyless">Tenkeyless:</label>
  <input type="checkbox" id="tenkeyless" name="tenkeyless" required />
</div>
<fieldset class="product-fieldset">
  <legend>Connection Type:</legend>
  <div>
    <input type="radio" id="wired" name="connectionType" value="wired" />
    <label for="wired">Wired</label>
  </div>
  <div>
    <input type="radio" id="wireless" name="connectionType" value="wireless" />
    <label for="wireless">Wireless</label>
  </div>
  <div>
    <input
      type="radio"
      id="bluetooth-wireless"
      name="connectionType"
      value="Bluetooth Wireless"
    />
    <label for="bluetooth-wireless">Bluetooth Wireless</label>
  </div>
</fieldset>
<div class="label-input-container">
  <label for="color">Color:</label>
  <input type="text" id="color" name="color" required />
</div>
