<div class="input-grouper">
  <div class="label-input-container">
    <label for="maximum-dpi">Maximum DPI:</label>
    <input
      type="number"
      step="100"
      id="maximum-dpi"
      name="maximumDPI"
      required
    />
  </div>
  <div class="label-input-container">
    <label for="color">Color:</label>
    <input type="text" id="color" name="color" required />
  </div>
</div>
<div class="input-grouper">
  <fieldset class="product-fieldset">
    <legend>Hand Orientation:</legend>
    <div>
      <input type="radio" id="right" name="handOrientation" value="Right" required />
      <label for="right">Right</label>
    </div>
    <div>
      <input type="radio" id="both" name="handOrientation" value="Both" />
      <label for="both">Both</label>
    </div>
  </fieldset>
  <fieldset class="product-fieldset">
    <legend>Connection Type:</legend>
    <div>
      <input type="checkbox" id="wired" name="connectionType" value="Wired" />
      <label for="wired">Wired</label>
    </div>
    <div>
      <input
        type="checkbox"
        id="wireless"
        name="connectionType"
        value="Wireless"
      />
      <label for="wireless">Wireless</label>
    </div>
    <div>
      <input
        type="checkbox"
        id="bluetooth-wireless"
        name="connectionType"
        value="Bluetooth Wireless"
      />
      <label for="bluetooth-wireless">Bluetooth Wireless</label>
    </div>
  </fieldset>
</div>
