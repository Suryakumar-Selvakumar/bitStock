<div class="input-grouper">
  <div class="label-input-container">
    <label for="chipset">Chipset:</label>
    <input type="text" id="chipset" name="chipset" required />
  </div>
  <div class="label-input-container">
    <label for="memory">Memory (GB):</label>
    <input type="number" min="0" id="memory" name="memory" required />
  </div>
</div>
<div class="input-grouper">
  <div class="label-input-container">
    <label for="core-clock">Core Clock (MHz):</label>
    <input type="number" min="0" id="core-clock" name="coreClock" required />
  </div>
  <div class="label-input-container">
    <label for="boost-clock">Boost Clock (MHz):</label>
    <input type="number" min="0" id="boost-count" name="boostClock" />
  </div>
</div>
<div class="input-grouper">
  <div class="label-input-container">
    <label for="color">Color:</label>
    <input type="text" id="color" name="color" required />
  </div>
  <div class="label-input-container">
    <label for="length">Length (mm):</label>
    <input type="number" min="0" id="length" name="length" required />
  </div>
</div>
